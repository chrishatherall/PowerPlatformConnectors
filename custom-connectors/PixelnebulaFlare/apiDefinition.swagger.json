  "paths": {
    "/api/takeovers": {
      "get": {
        "description": "Gets a list of active takeovers on your Flare account.",
        "responses": {
          "200": {
            "description": "OK response",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "lifetime": {
                    "type": "object",
                    "properties": {
                      "start": {
                        "type": "string",
                        "description": "The start of the takeover lifetime."
                      },
                      "end": {
                        "type": "string",
                        "description": "The end of the takeover lifetime."
                      }
                    },
                    "description": "lifetime"
                  },
                  "_id": {
                    "type": "string",
                    "description": "Unique takeover ID."
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the takeover."
                  }
                }
              }
            }
          },
          "default": {
            "description": "default",
            "schema": {}
          }
        },
        "summary": "Get active takeovers",
        "operationId": "get_takeovers",
        "x-ms-visibility": "important",
        "parameters": []
      },
      "post": {
        "description": "Triggers a takeover by template ID.",
        "responses": {
          "200": {
            "description": "OK response",
            "schema": {
              "type": "object",
              "properties": {
                "lifetime": {
                  "type": "object",
                  "properties": {
                    "start": {
                      "type": "string",
                      "description": "The start of the takeover lifetime."
                    },
                    "end": {
                      "type": "string",
                      "description": "The end of the takeover lifetime."
                    }
                  },
                  "description": "lifetime"
                },
                "_id": {
                  "type": "string",
                  "description": "Unique takeover ID."
                },
                "name": {
                  "type": "string",
                  "description": "Name of the takeover."
                }
              }
            }
          },
          "default": {
            "description": "default",
            "schema": {}
          }
        },
        "summary": "Trigger a takeover",
        "operationId": "trigger_takeover",
        "x-ms-visibility": "important",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "takeoverTemplate": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "description": "Name of the takeover to trigger.",
                      "title": "Takeover",
                      "x-ms-dynamic-values": {
                        "operationId": "get_takeover_templates",
                        "value-path": "_id",
                        "value-title": "name"
                      }
                    }
                  },
                  "description": "Takeover template.",
                  "required": [
                    "_id"
                  ]
                }
              },
              "required": [
                "takeoverTemplate"
              ]
            }
          }
        ]
      }
    },
    "/api/takeovertemplates": {
      "get": {
        "description": "Gets a list of takeover templates on your Flare account.",
        "responses": {
          "200": {
            "description": "default",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "_id": {
                    "type": "string",
                    "description": "Unique ID of the takeover template."
                  },
                  "name": {
                    "type": "string",
                    "description": "Name of the takeover template."
                  }
                }
              }
            }
          },
          "default": {
            "description": "default",
            "schema": {}
          }
        },
        "summary": "Get takeover templates",
        "operationId": "get_takeover_templates",
        "parameters": []
      }
    }
  },
